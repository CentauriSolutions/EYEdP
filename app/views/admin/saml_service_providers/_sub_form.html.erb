
<div class="form-group">
  <div class="row">
    <div class="col-sm-2">
      <%= form.label :groups %>
    </div>
    <div class="col-sm-10">
    <%- groups = Group.all %>
    <%= form.collection_check_boxes :group_ids, groups, :id, :name do |group| %>
      <div>
        <%= group.check_box %><%= group.label %>
      </div>
    <% end %>
    </div>
  </div>
</div>